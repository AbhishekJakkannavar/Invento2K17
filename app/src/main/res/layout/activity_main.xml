<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="infinityinc.com.invento2k17.MainActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/schedule1"
        android:id="@+id/scheduleButton"
        android:background="@null"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/events"
        android:background="@null"

        android:id="@+id/eventsButton"
        app:layout_constraintTop_toTopOf="@+id/scheduleButton"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/scheduleButton"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/contacts"
        android:background="@null"
        android:id="@+id/imageButton3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/scheduleButton"
        app:layout_constraintLeft_toLeftOf="@+id/scheduleButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/register"
        android:background="@null"
        android:id="@+id/imageButton5"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/notification"
        android:background="@null"
        android:id="@+id/imageButton4"
        app:layout_constraintTop_toTopOf="@+id/imageButton3"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButton3"
        android:layout_marginLeft="8dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:srcCompat="@drawable/maps"
        android:id="@+id/imageButton6"
        app:layout_constraintTop_toTopOf="@+id/imageButton5"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/imageButton5"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"

        android:id="@+id/log_out_button"

        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="366dp"
                android:layout_height="178dp"
                android:src="@drawable/slider1"
                android:layout_marginLeft="8dp"
                android:cropToPadding="false" />

            <ImageView
                android:layout_width="366dp"
                android:layout_height="178dp"
                android:src="@drawable/slider2"
                android:layout_marginLeft="8dp"/>
            <ImageView
                android:layout_width="366dp"
                android:layout_height="178dp"
                android:src="@drawable/slider3"
                android:layout_marginLeft="8dp"/>
            <ImageView
                android:layout_width="366dp"
                android:layout_height="178dp"
                android:src="@drawable/slider1"
                android:layout_marginLeft="8dp"
                />

        </LinearLayout>

    </HorizontalScrollView>


</android.support.constraint.ConstraintLayout>

